@using Bulky.Models
@model Product


<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">
						Delete Product

				</h2>
			</div>

		</div>

	</div>
	<div class="card-body p-4">
		<form method="post">
			<input asp-for="ID" hidden />
			<div class="border p-3 mt-4">
				
					
				@* <div asp-validation-summary="ModelOnly"></div> *@
				<div class="form-floating py-2 col-12">
					<input asp-for="Title" type="texr" disabled class="form-control border-0 shadow" />
					<label asp-for="Title" class="ms-2"></label>
					


				</div>
				<div class="form-floating py-2 col-12">
					<textarea asp-for="Description" type="texr" disabled class="form-control border-0 shadow"></textarea>
					<label asp-for="Description" class="ms-2"></label>

					
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="ISBN" type="texr" disabled class="form-control border-0 shadow" />
					<label asp-for="ISBN" class="ms-2"></label>

					

				</div><div class="form-floating py-2 col-12">
					<input asp-for="Author" type="texr" disabled class="form-control border-0 shadow" />
					<label asp-for="Author" class="ms-2"></label>

					
				</div><div class="form-floating py-2 col-12">
					<input asp-for="ListPrice" type="texr" disabled class="form-control border-0 shadow" />
					<label asp-for="ListPrice" class="ms-2"></label>

					
				
			</div><div class="form-floating py-2 col-12">
				<input asp-for="Price" type="texr" disabled class="form-control border-0 shadow" />
				<label asp-for="Price" class="ms-2"></label>

				
			</div>
				
				<div class="form-floating py-2 col-12">
					<input asp-for="Price50" type="texr" disabled class="form-control border-0 shadow" />
					<label asp-for="Price50" class="ms-2"></label>

					
				</div><div class="form-floating py-2 col-12">
					<input asp-for="Price100" type="texr" disabled class="form-control border-0 shadow" />
					<label asp-for="Price100" class="ms-2"></label>

					
				</div>
				<div class="row mt-3">
					<div class="col-6 col-md-3">
						<button type="submit" class=" btn btn-danger form-control">Delete</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-controller="Product" asp-action="Xyz" class="btn btn-primary border form-control ">Go Back</a>
					</div>
				</div>



			</div>

		</form>


	</div>

</div>

